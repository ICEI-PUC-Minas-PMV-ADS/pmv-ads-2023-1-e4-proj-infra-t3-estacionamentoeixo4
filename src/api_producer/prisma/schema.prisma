generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id    Int    @id @default(autoincrement())
  name  String @db.VarChar(50)
  email String @unique @db.VarChar(50)
  cpf   String @db.Char(11)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  veiculos  Veiculo[]
  reserva   Reserva[]

  // Nome da tabela @@map
  @@map("cliente")
}

model Veiculo {
  id         Int      @id @default(autoincrement())
  placa      String   @db.VarChar(10)
  modelo     String   @db.VarChar(20)
  cliente    Cliente  @relation(fields: [cliente_id], references: [id])
  cliente_id Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

  // Nome da tabela @@map
  @@map("veiculo")
}

model Reserva {
  duracao           Int
  horario_reserva   DateTime
  id_veiculo        Int
  cliente           Cliente        @relation(fields: [id_cliente], references: [id])
  id_cliente        Int
  estacionamento    Estacionamento @relation(fields: [id_estacionamento], references: [id])
  id_estacionamento Int
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @default(now())

  @@id([id_cliente, id_estacionamento])
  // Nome da tabela @@map
  @@map("reserva")
}

model Estacionamento {
  id                  Int     @id @default(autoincrement())
  preco               Decimal @db.Decimal(9, 2)
  vagas_preferenciais Int
  vagas_gerais        Int
  razao_social        String  @db.VarChar(255)
  cnpj                String  @unique @db.Char(14)

  createdAt     DateTime                           @default(now())
  updatedAt     DateTime                           @default(now())
  reservas      Reserva[]
  administrador EstacionamentoAndAdministradores[]
  Endereco      Endereco[]

  @@map("estacionamento")
}

model Administrador {
  id              Int                                @id @default(autoincrement())
  createdAt       DateTime                           @default(now())
  updatedAt       DateTime                           @default(now())
  nome            String
  email           String                             @unique
  estacionamentos EstacionamentoAndAdministradores[]

  // Nome da tabela @@map
  @@map("administrador")
}

model EstacionamentoAndAdministradores {
  estacionamento    Estacionamento @relation(fields: [id_estacionamento], references: [id])
  id_estacionamento Int
  administrador     Administrador  @relation(fields: [id_administrador], references: [id])
  id_administrador  Int

  @@id([id_estacionamento, id_administrador])
}

model Endereco {
  id                Int            @id @default(autoincrement())
  cep               Int
  bairro            String         @db.VarChar(255)
  endereco          String         @db.VarChar(255)
  numero            Int
  cidade            String         @db.VarChar(50)
  uf                String         @db.Char(2)
  estacionamento    Estacionamento @relation(fields: [id_estacionamento], references: [id])
  id_estacionamento Int
}
